---
import type { McpServer } from '@/data/mcp-servers';

interface Props {
  server: McpServer;
}

const { server } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;

const categoryColors = {
  psa: 'bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-400',
  rmm: 'bg-green-100 text-green-700 dark:bg-green-900/30 dark:text-green-400',
  documentation: 'bg-purple-100 text-purple-700 dark:bg-purple-900/30 dark:text-purple-400'
};

const categoryLabels = {
  psa: 'PSA',
  rmm: 'RMM',
  documentation: 'Documentation'
};

const totalTools = server.domains.reduce((sum, d) => sum + d.tools.length, 0);
---

<a href={`${baseUrl}mcp-servers/${server.id}/`} class="card group block">
  <div class="flex items-start justify-between mb-3">
    <div>
      <h3 class="font-semibold text-lg group-hover:text-accent transition-colors">
        {server.name}
      </h3>
      <p class="text-sm text-[var(--muted)]">{server.npmPackage}</p>
    </div>
    <span class={`text-xs font-medium px-2 py-1 rounded-full ${categoryColors[server.category]}`}>
      {categoryLabels[server.category]}
    </span>
  </div>

  <p class="text-[var(--muted)] text-sm mb-4 line-clamp-2">
    {server.description}
  </p>

  <div class="flex flex-wrap gap-2">
    {server.domains.slice(0, 3).map(domain => (
      <span class="text-xs px-2 py-1 rounded-full bg-[var(--border)] text-[var(--muted)]">
        {domain.name}
      </span>
    ))}
    {server.domains.length > 3 && (
      <span class="text-xs px-2 py-1 text-[var(--muted)]">
        +{server.domains.length - 3} more
      </span>
    )}
  </div>

  <div class="mt-4 pt-4 border-t border-[var(--border)] flex items-center justify-between text-sm text-[var(--muted)]">
    <span>{server.domains.length} domains</span>
    <span>{totalTools} tools</span>
  </div>
</a>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

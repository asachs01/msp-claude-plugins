---
import type { McpServer } from '@/data/mcp-servers';

interface Props {
  server: McpServer;
}

const { server } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;

const categoryColors = {
  psa: 'bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-400',
  rmm: 'bg-green-100 text-green-700 dark:bg-green-900/30 dark:text-green-400',
  documentation: 'bg-purple-100 text-purple-700 dark:bg-purple-900/30 dark:text-purple-400'
};

const categoryLabels = {
  psa: 'PSA',
  rmm: 'RMM',
  documentation: 'Documentation'
};

const totalTools = server.domains.reduce((sum, d) => sum + d.tools.length, 0);
---

<a href={`${baseUrl}mcp-servers/${server.id}/`} class="card group block">
  <div class="flex items-start justify-between mb-3">
    <div>
      <h3 class="font-semibold text-lg group-hover:text-accent transition-colors">
        {server.name}
      </h3>
      <p class="text-sm text-[var(--muted)]">{server.npmPackage}</p>
    </div>
    <span class={`text-xs font-medium px-2 py-1 rounded-full ${categoryColors[server.category]}`}>
      {categoryLabels[server.category]}
    </span>
  </div>

  <p class="text-[var(--muted)] text-sm mb-4 line-clamp-2">
    {server.description}
  </p>

  <div class="flex flex-wrap gap-2">
    {server.domains.slice(0, 3).map(domain => (
      <span class="text-xs px-2 py-1 rounded-full bg-[var(--border)] text-[var(--muted)]">
        {domain.name}
      </span>
    ))}
    {server.domains.length > 3 && (
      <span class="text-xs px-2 py-1 text-[var(--muted)]">
        +{server.domains.length - 3} more
      </span>
    )}
  </div>

  <div class="mt-4 pt-4 border-t border-[var(--border)] flex items-center justify-between text-sm text-[var(--muted)]">
    <span>{server.domains.length} domains Â· {totalTools} tools</span>
    <span class="inline-flex items-center gap-2">
      {server.mcpbAvailable && (
        <a href={`${server.repoUrl}/releases`} target="_blank" rel="noopener noreferrer" class="text-accent hover:underline" onclick="event.stopPropagation()">
          MCPB
        </a>
      )}
      <a href={server.repoUrl} target="_blank" rel="noopener noreferrer" class="text-[var(--muted)] hover:text-accent" onclick="event.stopPropagation()">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 16 16"><path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"/></svg>
      </a>
    </span>
  </div>
</a>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

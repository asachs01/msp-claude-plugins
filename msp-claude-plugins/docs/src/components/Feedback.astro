---
interface Props {
  pageTitle?: string;
  pagePath?: string;
}

const { pageTitle = '', pagePath = '' } = Astro.props;

const repoUrl = 'https://github.com/wyre-technology/msp-claude-plugins';
const issueBase = `${repoUrl}/issues/new`;

const feedbackParams = new URLSearchParams({
  title: `Docs feedback: ${pageTitle}`,
  labels: 'documentation,feedback',
  body: `**Page:** ${pagePath}\n\n**Feedback:**\n\n<!-- Tell us what was helpful or what could be improved -->\n`,
});

const bugParams = new URLSearchParams({
  title: `Docs issue: ${pageTitle}`,
  labels: 'documentation,bug',
  body: `**Page:** ${pagePath}\n\n**What's wrong:**\n\n<!-- Describe the issue you found -->\n\n**Expected:**\n\n<!-- What should it say or do instead? -->\n`,
});

const featureParams = new URLSearchParams({
  title: `Feature request: `,
  labels: 'enhancement',
  body: `**Problem or use case:**\n\n<!-- What are you trying to do? What problem would this solve? -->\n\n**Proposed solution:**\n\n<!-- How would you like this to work? -->\n\n**Alternatives considered:**\n\n<!-- Have you considered any alternative approaches? -->\n`,
});

const roadmapUrl = 'https://github.com/orgs/wyre-technology/projects/1';
---

<div class="mt-12 pt-8 border-t border-[var(--border)]">
  <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4">
    <p class="text-sm text-[var(--muted)]">Was this page helpful? See our <a href={roadmapUrl} target="_blank" rel="noopener noreferrer" class="text-accent hover:underline">roadmap</a>.</p>
    <div class="flex items-center gap-3">
      <a
        href={`${issueBase}?${feedbackParams.toString()}`}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-1.5 px-3 py-1.5 text-sm rounded-lg border border-[var(--border)] text-[var(--muted)] hover:text-[var(--text)] hover:border-[var(--text)] transition-colors"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
        </svg>
        Give Feedback
      </a>
      <a
        href={`${issueBase}?${featureParams.toString()}`}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-1.5 px-3 py-1.5 text-sm rounded-lg border border-[var(--border)] text-[var(--muted)] hover:text-[var(--text)] hover:border-[var(--text)] transition-colors"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
        </svg>
        Request a Feature
      </a>
      <a
        href={`${issueBase}?${bugParams.toString()}`}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-1.5 px-3 py-1.5 text-sm rounded-lg border border-[var(--border)] text-[var(--muted)] hover:text-[var(--text)] hover:border-[var(--text)] transition-colors"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        Report a Problem
      </a>
    </div>
  </div>
</div>
